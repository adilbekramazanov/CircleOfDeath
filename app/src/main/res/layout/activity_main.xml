<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:background="@color/darkMain"
        android:id="@+id/llHeader"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <TextView
            android:textColor="@color/whiteMain"
            android:layout_marginTop="150dp"
            android:layout_gravity="center"
            android:id="@+id/cardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your card is ..."
            android:textSize="30dp"
            ></TextView>
        <TextView
            android:textColor="@color/whiteMain"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:id="@+id/cardDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">>>"
            android:textSize="20dp"
            ></TextView>


        <Button
            android:layout_marginTop="200dp"
            android:id="@+id/buttonClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="new card"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:background="@color/whiteMain"
            android:textColor="@color/darkMain"
            android:textAlignment="center"
            android:layout_gravity="center"
            />
        <TextView
            android:textColor="@color/whiteMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cardsLeft"
            android:text="Cards in deck: 52"
            android:textSize="20dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            ></TextView>

<!--        <FrameLayout-->
<!--            android:id="@+id/flContainer"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"/>-->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
